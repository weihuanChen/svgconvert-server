{
  "name": "svgconvert-server",
  "version": "1.0.0",
  "description": "SVG conversion backend service with support for SVG, PNG, JPG, and PDF formats",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "svg",
    "converter",
    "image-processing",
    "hono",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.928.0",
    "@hono/node-server": "^1.13.1",
    "@resvg/resvg-js": "^2.6.2",
    "dotenv": "^16.4.5",
    "hono": "^4.6.3",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3",
    "pdf-lib": "^1.17.1",
    "potrace": "^2.1.8",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.7.5",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
